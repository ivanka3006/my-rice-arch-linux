Install fish shell

sudo pacman -S fish
fish
curl -sL https://git.io/fisher | source && fisher install jorgebucaran/fisher
fisher install jorgebucaran/nvm.fish
fisher install IlanCosman/tide@v5
chsh -s /usr/bin/fish
set -U fish_greeting

sudo nano .bashrc
  exec fish


tide configure

